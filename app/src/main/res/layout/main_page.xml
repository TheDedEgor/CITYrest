<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="139.97dp"
            android:layout_height="139.97dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/smile1" />

        <ImageView
            android:layout_width="110.06dp"
            android:layout_height="110.06dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="299dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/smile2" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="246dp"
            android:background="@drawable/smile3"
            android:elevation="15dp" />

        <TextView
            android:id="@+id/rectangle_1"
            android:layout_width="269dp"
            android:layout_height="269dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="71dp"
            android:layout_marginTop="67dp"
            android:background="@drawable/grad_color_main"
            android:fontFamily="Montserrat"
            android:gravity="center"
            android:text="CITYrest"
            android:textColor="@color/white"
            android:textSize="32sp" />

    </RelativeLayout>

    <EditText
        android:id="@+id/login_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/rounded_white_stroke"
        android:drawableLeft="@drawable/login"
        android:drawablePadding="7dp"
        android:hint="Логин"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/pass_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/rounded_white_stroke"
        android:drawableLeft="@drawable/password"
        android:drawablePadding="7dp"
        android:hint="Пароль"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textSize="20sp" />

    <Button
        android:id="@+id/input_button"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="Montserrat"
        android:text="Вход"
        android:textColor="@color/white"
        android:onClick="clickInput"/>

    <TextView
        android:id="@+id/registration_button"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:fontFamily="Montserrat"
        android:gravity="center"
        android:text="Еще не зарегистрированы?"
        android:textColor="@color/black"
        android:onClick="clickRegistration"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:background="@android:color/transparent"
        android:src="@drawable/qwerty" />

</LinearLayout>
