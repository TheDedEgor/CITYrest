<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:id="@+id/user_chat"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_photo"
        android:layout_width="61dp"
        android:layout_height="61dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/user_photo"/>
    <TextView
        android:id="@+id/user_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/user_photo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/montserrat"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Макеева Василиса"/>
    <TextView
        android:id="@+id/user_last_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#8A8A8A"
        app:layout_constraintLeft_toRightOf="@id/user_photo"
        app:layout_constraintTop_toBottomOf="@id/user_name"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/montserrat"
        android:textSize="12sp"
        android:text="На сегодня все в силе?"/>
    <TextView
        android:id="@+id/user_last_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#8A8A8A"
        app:layout_constraintLeft_toRightOf="@id/user_last_message"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="53dp"
        android:fontFamily="@font/montserrat"
        android:textSize="9sp"
        android:text=" · 10 мин"/>
    <ImageView
        android:id="@+id/unread_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_unread"
        android:visibility="visible"
        app:layout_constraintLeft_toRightOf="@id/user_name"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>