<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_news"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="313dp"
    android:layout_height="103dp"
    android:layout_marginTop="10dp"
    android:layout_gravity="center"
    android:background="@drawable/rounded_white"
    android:elevation="20dp">
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:textSize="17sp"
        android:fontFamily="@font/montserrat"
        android:text="Ищу компанию в кино"/>
    <TextView
        android:id="@+id/first_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Время: 17:30"
        android:textSize="12sp"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/title_text"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/second_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Дата: 19.04"
        android:fontFamily="@font/montserrat"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/first_info_text"
        app:layout_constraintLeft_toLeftOf="parent" />
    <ImageView
        android:id="@+id/ico_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/first_info_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_1_item_news"/>
</androidx.constraintlayout.widget.ConstraintLayout>