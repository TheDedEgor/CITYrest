<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FirstRegActivity">
    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/grad_color_reg">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Регистрация"
            android:textSize="25sp"
            android:gravity="center"
            android:fontFamily="Montserrat"
            android:textColor="@color/white"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"/>
        <EditText
            android:id="@+id/email_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:textSize="20sp"
            android:padding="5dp"
            android:fontFamily="Montserrat"
            android:hint="Введите email"
            android:inputType="textEmailAddress"
            android:background="@drawable/rounded_white"
            android:drawableLeft="@drawable/ico_email_left"
            android:drawablePadding="10dp"/>
        <EditText
            android:id="@+id/password_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:textSize="20sp"
            android:fontFamily="Montserrat"
            android:padding="10dp"
            android:hint="Пароль"
            android:inputType="textPassword"
            android:background="@drawable/rounded_white"/>
        <EditText
            android:id="@+id/password_again_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:fontFamily="Montserrat"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginBottom="40dp"
            android:textSize="20sp"
            android:padding="10dp"
            android:hint="Пароль повторно"
            android:inputType="textPassword"
            android:background="@drawable/rounded_white"/>
    </LinearLayout>
    <Button
        android:id="@+id/continue_button"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Продолжить"
        android:background="@drawable/rounded_button"
        android:textColor="@color/white"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:fontFamily="Montserrat"
        android:onClick="clickContinue"/>
</LinearLayout>